<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="br.com.manieri.guarany.ui.cliente.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_editeClienteFragment"
            app:destination="@id/editeClienteFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="br.com.manieri.guarany.ui.produto.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="br.com.manieri.guarany.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/editeClienteFragment"
        android:name="br.com.manieri.guarany.ui.cliente.EditClienteFragment"
        android:label="fragment_edite_cliente"
        tools:layout="@layout/fragment_edit_cliente" >
        <action
            android:id="@+id/action_editeClienteFragment_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
</navigation>